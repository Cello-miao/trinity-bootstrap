# Environment Variables for Docker Compose and Local Development
# Copy this file to .env and customize as needed

# PostgreSQL Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=trinity_bootstrap
DB_HOST=localhost
DB_PORT=5432

# For Docker Compose: PostgreSQL host port mapping
# Set to 5433 if you have local PostgreSQL running on 5432
# Set to 5432 if you want to use standard port
DB_PORT_HOST=5433

# Backend Configuration
BACKEND_PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_PORT=3002
REACT_APP_API_URL=http://localhost:3000

# JWT Configuration
# IMPORTANT: Generate secure keys for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRE=1h

# CORS Configuration
CORS_ORIGIN=http://localhost:3002
